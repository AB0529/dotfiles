# SSH
alias ab-ssh="ssh ab@vps-ab"
alias ab-sshr="ssh root@vps-root"

# Linux only aliases
if [ "$OS" = "Linux" ]; then 
    alias ab-backup="$HOME/Scripts/backuper.sh"
    # Update pacman packages
    alias ab-pacupdate="sudo pacman -Syyu"
    # Update AUR and Pacman packages
    alias ab-update="paru -Syu"
    # Change ls to exa
    alias ls="exa --icons --color=always --group-directories-first"
    # Change grep to ripgrep
    alias grep="rg"

    alias nou="cat $SCRIPTS/Texts/nou.txt | xsel --clipboard"
    alias fuckyou="$SCRIPTS/Texts/fuckyou.sh"
    alias mon2cam="deno run --unstable -A -r -q https://raw.githubusercontent.com/ShayBox/Mon2Cam/master/src/mod.ts"
    alias se="sudoedit"
    alias vpn="sudo openvpn ~/Documents/ab.ovpn"

    # Add flags to commands
    alias df="df -h"

    alias dfiles="/usr/bin/git --git-dir=$HOME/dotfiles.git --work-tree=$HOME"
fi

# Shortened Commands
alias py="python3"
alias nf="neofetch"

# Confirm before overwrite
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"

# Change directory
alias c="cd $CODING && ls"
alias cb="cd $HOME/Scripts && ls"
alias cpy="cd $CODING/Python && ls"
alias cgo="cd $CODING/Go && ls"
alias cr="cd $CODING/Rust && ls"
alias cjs="cd $CODING/JS && ls"
alias pics="cd $PICS && ls"
alias cf="cd $XDG_CONFIG_HOME && ls"
alias cs="cd /usr/bin/ && ls"
alias exb="cd /media/Extra/Backups"
alias ex="cd /media/Extra"
alias repos="cd $HOME/Repos"
alias yt="cd /media/Extra/YouTube"
alias movies="cd /media/Extra/Movies"
alias shows="cd /media/Extra/Shows"

# Open with vim
alias bsp="nvim $XDG_CONFIG_HOME/bspwm/bspwmrc"
alias sx="nvim $XDG_CONFIG_HOME/sxhkd/sxhkdrc"
alias zrc="nvim $XDG_CONFIG_HOME/zsh/.zshrc"
alias za="nvim $XDG_CONFIG_HOME/zsh/aliases" 
alias zenv="nvim $HOME/.zshenv"
alias vrc="nvim $XDG_CONFIG_HOME/nvim/init.vim"
alias xrc="nvim $XDG_CONFIG_HOME/X11/xinitrc"
alias poly="nvim $XDG_CONFIG_HOME/polybar/config"
alias xr="nvim $XDG_CONFIG_HOME/X11/Xresources"
